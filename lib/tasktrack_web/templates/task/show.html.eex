<h1>Show Task</h1>

<ul>

  <li>
    <strong>Complete:</strong>
    <%= @task.complete %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @task.description %>
  </li>

  <li>
    <strong>Duration:</strong>
    <%= @task.duration %>
  </li>

</ul>

<%= if @current_user do %>
  <%= if @current_user.name == @task.user.name do %>
    <span><%= link "Edit", to: Routes.task_path(@conn, :edit, @task) %></span>
  <% end %>
<% end %>
